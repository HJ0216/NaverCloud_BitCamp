	<!-- 요청에 의한 객체 생성이 아니므로 servlet-context.xml에 기재하는 것이 아니라 root-context.xml에 기재 -->

	<context:component-scan base-package="spring.conf" />
	<!-- annotation 사용 시, component 선언 -->


</beans>
